<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="MyPersistenceUnit" transaction-type="RESOURCE_LOCAL">
        <!-- Provide your data source information here -->
        <!-- JPA provider: Hibernate -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Entity classes -->
        <class>com.example.demo.Note</class>
        <!-- Add more entity classes if needed -->

        <properties>
            <!-- JDBC Database URL -->
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/myprojectdb"/>
 			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <!-- Database username and password -->
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="123"/>

            <!-- Specify Hibernate as the JPA provider -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>

            <!-- Automatically create or update the database schema -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/myprojectdb"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="123"/>


        </properties>
    </persistence-unit>
</persistence>
